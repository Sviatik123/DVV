@using SubChoice.Core.Data.Entities
@{
    ViewData["Title"] = "Subjects";
}
<div class="d-flex justify-content-between my-4"><h1 class="p-0">@ViewData["Title"]</h1> <a asp-controller="Home" asp-action="Create" class="btn btn-login">New</a></div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Teacher</th>
            <th scope="col">Participants</th>
        </tr>
    </thead>
    <tbody>
        @{
            var data = (List<Subject>)ViewData["Subjects"];
        }
        @foreach (var subject in @data)
        {
            <tr>
                <th scope="row">@subject.Id</th>
                <td>@subject.Name</td>
                <td>@subject.Teacher.User.DisplayName</td>
                <td>@subject.StudentSubjects.Count/@subject.StudentsLimit</td>
            </tr>
        }
    </tbody>
</table>

